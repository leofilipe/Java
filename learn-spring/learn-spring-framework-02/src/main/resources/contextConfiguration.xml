<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		 http://www.springframework.org/schema/beans
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.springframework.org/schema/context 
		 http://www.springframework.org/schema/context/spring-context.xsd
		 ">

	<!-- beans can either be individually defined here or collected from a component scan.
	However, early on Spring, it was not possible to define beans through Java classes -->
	
	<bean id="name" class="java.lang.String">
		<constructor-arg value="LEO"/>
	</bean>
	
	<bean id="age" class="java.lang.Integer">
		<constructor-arg value="39"/>
	</bean>
	
	<!--  <context:component-scan base-package="com.github.leofilipe.java.learnspringframework.game"/>
	-->
	<bean id="game" class="com.github.leofilipe.java.learnspringframework.game.PacmanGame" />
	
	<bean id="gameRunner" class="com.github.leofilipe.java.learnspringframework.game.GameRunner">
	<constructor-arg ref="game"/>
	</bean>
</beans>
